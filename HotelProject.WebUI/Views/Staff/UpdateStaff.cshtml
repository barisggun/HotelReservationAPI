@model UpdateStaffViewModel

@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Personel güncelle</h1>

<form method="post">
    <input type="hidden" asp-for="StaffID" value="put"/>
    <label>Personel adı</label>
    <input type="text" asp-for=Name class="form-control" />
    <br />

    <label>Personel ünvanı</label>
    <input type="text" asp-for=Title class="form-control" />
    <br />

    <label>Medya1</label>
    <input type="text" asp-for=SocialMedia1 class="form-control" />
    <br />

    <label>Medya2</label>
    <input type="text" asp-for=SocialMedia2 class="form-control" />
    <br />

    <label>Medya3</label>
    <input type="text" asp-for=SocialMedia3 class="form-control" />
    <br />

    <button class="btn mb-1 btn-rounded btn-outline-success">Personeli güncelle</button>
</form>

